// tsconfig.json allows comments :)
{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    // prettier-ignore
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es5"
  },
  // 3 levels up to get to repo root from node_modules/@andyjy/monorepo-utils
  "exclude": [
    "../../../**/.next",
    "../../../**/node_modules",
    "../../../**/dist"
  ]
}
